{
  "packages": [
    "elmPackages.elm@latest",
    "elmPackages.elm-doc-preview@latest",
    "elmPackages.elm-format@latest",
    "elmPackages.elm-test@latest",
    "nodejs@22",
    "pnpm@latest",
    "rsync@latest",
    "shellcheck@latest"
  ],
  "env": {
    "PATH": "$DEVBOX_PROJECT_ROOT/bin:$DEVBOX_PROJECT_ROOT/examples/node_modules/.bin:$PATH",
    "build": "$DEVBOX_PROJECT_ROOT/examples/dist",
    "project": "$DEVBOX_PROJECT_ROOT"
  },
  "shell": {
    "init_hook": [
      ". $project/init.sh",
      "cd examples && pnpm install --silent"
    ]
  }
}
